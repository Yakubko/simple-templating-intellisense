{
    "name": "autocomplete",
    "version": "1.0.0",
    "description": "Simple templating intellisense",
    "author": "Jakub Miskech <yakubmiskech@gmail.com>",
    "license": "UNLICENSED",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "NODE_ENV=development webpack serve",
        "build": "npm run build:node && npm run build:iife",
        "build:node": "rimraf ./dist && tsc",
        "build:iife": "rimraf ./lib && NODE_ENV=production webpack",
        "test": "jest",
        "test:staged": "CI=true npm run test -- --bail --findRelatedTests --forceExit",
        "prettier": "prettier '*/**/*.+(ts|json|yml|yaml|css|md)' --write",
        "lint": "eslint 'src/**/*.ts' --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{ts,json,yml,yaml,css,md}": [
            "npm run prettier"
        ],
        "**/*.ts": [
            "npm run lint",
            "npm run test:staged"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {}
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 220,
        "tabWidth": 4
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-typescript"
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": true
                }
            ],
            [
                "transform-remove-console",
                {
                    "exclude": [
                        "error",
                        "warn"
                    ]
                }
            ],
            "@babel/proposal-object-rest-spread"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "./test/__mocks__/jest.setup.js"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@types/jest": "^26.0.15",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^5.0.0",
        "css-minimizer-webpack-plugin": "^1.1.5",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.0",
        "jest": "^26.6.1",
        "lint-staged": "^10.5.1",
        "mini-css-extract-plugin": "^1.2.1",
        "prettier": "^2.1.2",
        "style-loader": "^2.0.0",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.11",
        "typescript": "^4.0.5",
        "webpack": "^5.3.2",
        "webpack-cli": "^4.1.0",
        "webpack-dev-server": "^3.11.0",
        "webpack-html-plugin": "^0.1.1",
        "webpack-merge": "^5.4.0"
    }
}
